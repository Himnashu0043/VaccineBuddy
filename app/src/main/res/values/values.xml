<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Custom" parent="@android:style/Theme">
        <item name="default_style">@style/default_swipe_button_style</item>
    </style>
    <style name="default_swipe_button_style" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="inner_text">Swipe</item>
        <item name="inner_text_color">@color/black</item>
        <item name="inner_text_size">12sp</item>
        <item name="inner_text_gravity">center</item>

        <item name="outer_background_drawable">@drawable/rounded_gray_corners</item>
        <item name="outer_background_height">40dp</item>

        <item name="button_background_drawable">@drawable/swipe_btn_background</item>
        <item name="button_background_padding">16dp</item>
        <item name="button_background_src">@drawable/checkmark_white</item>
        <item name="button_width">56dp</item>
        <item name="button_height">56dp</item>

        <item name="trail_enabled">true</item>
        <item name="trail_background_tint">@color/gray</item>

        <item name="has_finish_animation">true</item>
        <item name="has_active_status">true</item>
    </style>
    <declare-styleable name="SwipeButton">
        <attr format="reference" name="default_style"/>
        <attr format="string" name="inner_text"/>
        <attr format="color" name="inner_text_color"/>
        <attr format="dimension" name="inner_text_size"/>
        <attr format="dimension" name="inner_text_padding"/>
        <attr format="dimension" name="inner_text_left_padding"/>
        <attr format="dimension" name="inner_text_right_padding"/>
        <attr format="dimension" name="inner_text_top_padding"/>
        <attr format="dimension" name="inner_text_bottom_padding"/>
        <attr format="enum" name="inner_text_gravity">
            <enum name="start" value="0"/>
            <enum name="center" value="1"/>
            <enum name="end" value="2"/>
        </attr>

        <attr format="reference" name="outer_background_drawable"/>
        <attr format="color" name="outer_background_tint"/>
        <attr format="dimension" name="outer_background_height"/>

        <attr format="reference" name="button_background_drawable"/>
        <attr format="reference" name="button_background_tint"/>
        <attr format="reference" name="button_background_src"/>
        <attr format="dimension" name="button_width"/>
        <attr format="dimension" name="button_height"/>
        <attr format="dimension" name="button_background_padding"/>

        <attr format="boolean" name="trail_enabled"/>
        <attr format="color" name="trail_background_tint"/>

        <attr format="boolean" name="has_active_status"/>
        <attr format="boolean" name="has_finish_animation"/>

    </declare-styleable>
</resources>