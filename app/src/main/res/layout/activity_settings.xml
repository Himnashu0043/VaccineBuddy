<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".ui.view.activity.SettingsActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/common_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView65"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="24dp"
        android:background="@drawable/settings_view_shape"
        android:fontFamily="@font/gilroy_regular"
        android:gravity="fill_vertical"
        android:paddingLeft="16dp"
        android:text="Notifications"
        android:textColor="@color/newcolor"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/pushNotiBtn"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/textView65"
        app:layout_constraintEnd_toEndOf="@+id/textView65"
        app:layout_constraintTop_toTopOf="@+id/textView65"
        app:thumbTint="@color/white"
        app:trackTint="@color/darknavyblue2" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/settings_view_shape"
        android:drawableRight="@drawable/ic_dropdown"
        android:fontFamily="@font/gilroy_regular"
        android:gravity="fill_vertical"
        android:paddingLeft="16dp"
        android:paddingEnd="@dimen/dp_32"
        android:text="Change Password"
        android:textColor="@color/newcolor"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/textView65"
        app:layout_constraintTop_toBottomOf="@+id/textView65" />


