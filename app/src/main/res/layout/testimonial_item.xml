<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="251dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_4">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pink_bg">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivMain"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivdummy"
                android:layout_width="@dimen/dp_60"
                android:layout_height="0dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="8dp"
                android:src="@drawable/circle_app_icon"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            <TextView
                android:id="@+id/tvTesName"
                style="@style/normaltxt_15spbold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Ankit Patel"
                android:textColor="@color/newcolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivMain"
                app:layout_constraintTop_toTopOf="@+id/ivMain" />

            <TextView
                android:id="@+id/tvTesCEO"
                style="@style/normaltxt_10sp_Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:textColor="@color/pink"
                app:layout_constraintEnd_toEndOf="@+id/tvTesName"
                app:layout_constraintStart_toStartOf="@+id/tvTesName"
                app:layout_constraintTop_toBottomOf="@+id/tvTesName" />

            <TextView
                android:id="@+id/tvTesDes"
                style="@style/normaltxt_10sp_Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:textColor="@color/newblack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvReadMore"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvTesCEO"
                app:layout_constraintTop_toBottomOf="@+id/tvTesCEO" />

            <TextView
                android:id="@+id/tvReadMore"
                style="@style/normaltxt_8sp_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:text="Read More"
                android:textColor="@color/newblack"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvTesCEO"
                app:layout_constraintStart_toEndOf="@+id/tvTesDes"
                app:layout_constraintTop_toBottomOf="@+id/tvTesCEO" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>