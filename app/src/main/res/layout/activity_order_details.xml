<!--                app:layout_constraintStart_toStartOf="@+id/textView209"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/textView209" />-->

            <TextView
                android:id="@+id/tvSchedulHistory"
                style="@style/normaltxt_11sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:visibility="visible"
                android:text="@string/schedule_history"
                android:textColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="@+id/textView209"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView209" />

            <include
                android:id="@+id/does_lay"
                layout="@layout/does_details_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView209" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcyDoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/common_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView209"
                app:layout_constraintVertical_bias="0.0" />

            <include
                android:id="@+id/common_btn"
                layout="@layout/common_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/does_lay" />

            <include
                android:id="@+id/common_btn1"
                layout="@layout/common_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/common_btn"
                app:layout_constraintStart_toStartOf="@+id/common_btn"
                app:layout_constraintTop_toBottomOf="@+id/common_btn" />
            <TextView
                android:id="@+id/tvPreView"
                style="@style/normaltxt_14sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Review Nurse"
                android:padding="@dimen/dp_4"
                android:visibility="gone"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="@+id/common_btn"
                app:layout_constraintStart_toStartOf="@+id/common_btn"
                app:layout_constraintTop_toBottomOf="@+id/common_btn1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>