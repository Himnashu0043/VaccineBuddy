<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/btn_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                android:id="@+id/textView98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/book_a_free_vaccination_counselling2"
                android:fontFamily="@font/gilroy_semibold"
                android:textColor="@color/newcolor"
                android:gravity="left"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="@+id/imageView47"
                app:layout_constraintTop_toTopOf="@+id/imageView47" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/home_drawable"
                android:backgroundTint="@null"
                android:fontFamily="@font/gilroy_medium"
                android:text="Click Here"
                android:textAllCaps="false"
                android:textColor="@color/darknavyblue"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toEndOf="@+id/textView98"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView98"
                app:layout_constraintTop_toBottomOf="@+id/textView98" />

            <TextView
                android:id="@+id/explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gilroy_bold"
                android:text="Explore Our Vaccine"
                android:textAllCaps="false"
                android:textColor="@color/newcolor"
                android:textSize="@dimen/sp_18"
                app:layout_constraintStart_toStartOf="@id/imageView47"
                app:layout_constraintTop_toBottomOf="@id/imageView47">

            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_view"
                android:layout_width="92dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/home_btn"
                android:backgroundTint="@null"
                android:fontFamily="@font/gilroy_medium"
                android:text="View All"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/explore"
                app:layout_constraintTop_toBottomOf="@+id/imageView47">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_homefrag2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/imageView47"
                app:layout_constraintStart_toStartOf="@id/explore"
                app:layout_constraintTop_toBottomOf="@id/explore">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/testimonials"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gilroy_bold"
                android:text="@string/testimonials"
                android:textAllCaps="false"
                android:textColor="@color/newcolor"
                android:textSize="@dimen/sp_18"
                app:layout_constraintStart_toStartOf="@id/recycler_view_homefrag2"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_homefrag2">

            </TextView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_homefrag3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/recycler_view_homefrag2"
                app:layout_constraintStart_toStartOf="@id/testimonials"
                app:layout_constraintTop_toBottomOf="@id/testimonials">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>