        android:text="@string/not_receive_code"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@+id/firstPinView"
        app:layout_constraintStart_toStartOf="@+id/firstPinView"
        app:layout_constraintTop_toBottomOf="@+id/firstPinView" />
    <com.chaos.view.PinView
        android:id="@+id/firstPinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:inputType="number"
        android:itemBackground="@drawable/opt_bg"
        android:padding="5dp"
        android:textColor="@color/text_colors"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cursorWidth="2dp"
        app:itemCount="6"
        app:itemHeight="@dimen/dp_35"
        app:itemRadius="4dp"
        app:itemSpacing="@dimen/dp_20"
        app:itemWidth="@dimen/dp_35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView141"
        app:lineColor="@color/line_colors"
        app:viewType="none">

        <requestFocus />
    </com.chaos.view.PinView>
