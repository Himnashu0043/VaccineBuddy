         <com.VB_Healthtech_Pvt_Ltd.Vaccine_Buddy.ui.view.swipeview.SwipeButton
             android:id="@+id/swipe"
             android:layout_width="@dimen/dp_200"
             android:layout_height="wrap_content"
             android:layout_marginEnd="@dimen/dp_16"
             android:visibility="visible"
             app:button_background_drawable="@drawable/inner_text_bg"
             app:button_background_padding="4dp"
             app:button_background_src="@drawable/blue_arrow"
             app:button_height="@dimen/dp_40"
             app:button_width="@dimen/dp_40"
             app:has_active_status="false"
             app:has_finish_animation="true"
             app:inner_text="Swipe To Checkout"
             app:inner_text_color="@color/white"
             app:inner_text_gravity="center"
             app:inner_text_padding="8dp"
             app:inner_text_size="12sp"
             app:layout_constraintBottom_toBottomOf="@+id/textView160"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="@+id/textView159"
             app:outer_background_drawable="@drawable/swipe_button_bg"
             app:outer_background_height="40dp"
             app:outer_background_tint="@color/white"
             app:trail_background_tint="@color/darknavyblue2"
             app:trail_enabled="true" />

