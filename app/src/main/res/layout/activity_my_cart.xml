<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFF2"
    tools:context=".ui.view.activity.MyCart.MyCartActivity">

    <include
        android:id="@+id/mycartToolbar"
        layout="@layout/common_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/cart_json"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mycartToolbar"
        app:lottie_autoPlay="true"
        app:lottie_fileName="emptyCartdata.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tvsizeCart"
        style="@style/normaltxt_14sp_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mycartToolbar" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvsizeCart">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcy_mycart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/walletBalance_const"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/dp_9"
                app:cardElevation="@dimen/dp_4"
                app:layout_constraintEnd_toEndOf="@id/rcy_mycart"
                app:layout_constraintStart_toStartOf="@id/rcy_mycart"
                app:layout_constraintTop_toBottomOf="@id/rcy_mycart">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_view_shape"
                    app:layout_constraintEnd_toEndOf="@id/rcy_mycart"
                    app:layout_constraintStart_toStartOf="@id/rcy_mycart"
                    app:layout_constraintTop_toBottomOf="@id/rcy_mycart">

                    <TextView
                        android:id="@+id/wallet_balance"
                        style="@style/normaltxt_16sp_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/wallet_balance"
                        android:textColor="@color/newcolor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rupee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="@dimen/dp_8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/wallet_check"
                        app:layout_constraintStart_toStartOf="@id/wallet_balance"
                        app:layout_constraintTop_toBottomOf="@id/wallet_balance" />

                    <CheckBox
                        android:id="@+id/wallet_check"
                        android:layout_width="30dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:buttonTint="@color/darknavyblue2"
                        android:checked="true"
                        app:layout_constraintBottom_toBottomOf="@id/rupee"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/wallet_balance" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewCo_Operate"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/dp_9"
                app:cardElevation="@dimen/dp_4"
                app:layout_constraintEnd_toEndOf="@+id/walletBalance_const"
                app:layout_constraintStart_toStartOf="@+id/walletBalance_const"
                app:layout_constraintTop_toBottomOf="@+id/walletBalance_const">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/layout_view_shape"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/checkBox_co_operate"
                        style="@style/normaltxt_14sp_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dp_8"
                        android:buttonTint="@color/darknavyblue"
                        android:text="Corporate Employee"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCo_operate"
                        style="@style/normaltxt_14sp_bold"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="invisible"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/checkBox_co_operate"
                        app:layout_constraintEnd_toStartOf="@+id/tvCrossCo_Operate"
                        app:layout_constraintStart_toEndOf="@+id/checkBox_co_operate"
                        app:layout_constraintTop_toTopOf="@+id/checkBox_co_operate" />

                    <ImageView
                        android:id="@+id/tvCrossCo_Operate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvCo_operate"
                        app:srcCompat="@drawable/ic_cancel" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wallet_constraint"
                style="@style/normaltxt_18sp_bold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="8dp"
                android:visibility="visible"
                android:background="@drawable/drawable_dash"
                app:layout_constraintEnd_toEndOf="@+id/walletBalance_const"
                app:layout_constraintStart_toStartOf="@+id/walletBalance_const"
                app:layout_constraintTop_toBottomOf="@+id/cardViewCo_Operate">

                <ImageView
                    android:id="@+id/coupen_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:src="@drawable/coupen_img"
                    app:layout_constraintBottom_toBottomOf="@id/wallet_constraint"
                    app:layout_constraintStart_toStartOf="@id/wallet_constraint"
                    app:layout_constraintTop_toTopOf="@id/wallet_constraint" />

                <TextView
                    android:id="@+id/coupen_code"
                    style="@style/normaltxt_16sp_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="@string/coupon_code"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/coupen_img"
                    app:layout_constraintStart_toEndOf="@id/coupen_img"
                    app:layout_constraintTop_toTopOf="@id/coupen_img" />

                <TextView
                    android:id="@+id/apply_coupen"
                    style="@style/normaltxt_18sp_Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:text="@string/apply_coupon"
                    android:textColor="@color/orange"
                    app:layout_constraintBottom_toBottomOf="@id/coupen_code"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/coupen_code" />

                <ImageView
                    android:id="@+id/ivCrossCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/coupen_img"
                    app:layout_constraintEnd_toEndOf="@+id/apply_coupen"
                    app:layout_constraintTop_toTopOf="@+id/coupen_img"
                    app:srcCompat="@drawable/ic_cancel" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView142"
                style="@style/normaltxt_18sp_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/payment_summary"
                android:textColor="@color/newcolor"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
