<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:id="@+id/mianBannerLay"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView52"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_130"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/service_10_imge_shapeable_overloay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView52"
        app:layout_constraintEnd_toEndOf="@+id/imageView52"
        app:layout_constraintStart_toStartOf="@+id/imageView52"
        app:layout_constraintTop_toTopOf="@+id/imageView52"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tvBannerName"
        style="@style/normaltxt_22sp_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:text="Book Free"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBannerDes"
        style="@style/normaltxt_12sp_Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tvBannerName"
        app:layout_constraintStart_toStartOf="@+id/tvBannerName"
        app:layout_constraintTop_toBottomOf="@+id/tvBannerName" />

    <TextView
        android:id="@+id/textView118"
        style="@style/normaltxt_14sp_Medium"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_shape_slide"
        android:gravity="center"
        android:text="View Details"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView52"
        app:layout_constraintStart_toStartOf="@+id/tvBannerName" />
</androidx.constraintlayout.widget.ConstraintLayout>